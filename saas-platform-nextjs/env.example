# Supabase配置
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# 应用配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Rust PNG SaaS

# 认证配置
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000/auth/callback
NEXT_PUBLIC_AUTH_LOGOUT_REDIRECT_URL=http://localhost:3000

# 存储配置
NEXT_PUBLIC_STORAGE_BUCKET=images
NEXT_PUBLIC_STORAGE_URL=your-storage-url

# Stripe配置
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# 邮件配置
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@rust-png-saas.com
FROM_NAME=Rust PNG SaaS

# 图片处理配置
NEXT_PUBLIC_IMAGE_PROCESSOR_URL=http://localhost:8001
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/jpg,image/gif,image/webp,image/avif

# 安全配置
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# 监控配置
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# 开发配置
NODE_ENV=development
DEBUG=false
